@model NguyenVanDai.SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Delete nhaxuatban";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3>Bạn quyết định xóa quyển sách này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>

<div>
    <dl class="dl-horizontal">
        <dt>
            Mã nhà xuất bản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaNXB)
        </dd>

        <dt>
            Tên nhà xuất bản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenNXB)
        </dd>
        <dt>
            Địa chỉ:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt>
            Điện thoại:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ", "Index")
        </div>
    }
</div>