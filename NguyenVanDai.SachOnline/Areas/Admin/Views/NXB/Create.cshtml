@model NguyenVanDai.SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Create nhaxuatban";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM NHÀ XUẤT BẢN</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
 
    <div class="form-group">
        <label class="control-label col-md-2">Tên nhà xuất bản:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenNXB" value="@ViewBag.TenNXB" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" value="@ViewBag.DiaChi" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="DienThoai" value="@ViewBag.DienThoai" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ", "Index")
</div>