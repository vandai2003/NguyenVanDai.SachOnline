@model NguyenVanDai.SachOnline.Models.KHACHHANG

@{
    ViewBag.Title = "Create khachhang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM KHÁCH HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <input type="hidden" name="MaKH" id="soLuongHidden" />
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Họ tên:</label>
        <div class="col-md-10">
            <input type="text" required name="hoten" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tài khoản:</label>
        <div class="col-md-10">
            <input type="text" required name="taikhoan" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Mật khẩu:</label>
        <div class="col-md-10">
            <input type="password" required name="matkhau" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email:</label>
        <div class="col-md-10">
            <input type="email" required name="email" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            <input type="text" required name="DiaChi" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Điện thoại:</label>
        <div class="col-md-10">
            <input type="number" required name="Dienthoai"/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày sinh:</label>
        <div class="col-md-10">
            <input type="date" name="dNgaySinh" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ", "Index")
</div>

<script>
    function getRandomNumber(min, max) {
        return Math.floor(Math.random() * (max - min + 1)) + min;
    }
    var soLuongHidden = document.getElementById("soLuongHidden");
    var randomValue = getRandomNumber(0, 99);
    soLuongHidden.value = randomValue;
</script>
