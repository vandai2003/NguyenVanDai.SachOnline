@model NguyenVanDai.SachOnline.Models.KHACHHANG

@{
    ViewBag.Title = "Delete khachhang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3>Bạn quyết định xóa quyển sách này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>

    <dl class="dl-horizontal">
        <dt>
            Mã khách hàng:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaKH)
        </dd>

        <dt>
            Họ tên:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Tài khoản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>

        <dt>
            Mật khẩu:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>

        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Địa chỉ:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Điện thoại:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>

        <dt>
            Ngày sinh:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="XÓA" class="btn btn-default" /> |
    @Html.ActionLink("VỀ TRANG QUẢN LÝ", "Index")
</div>
    }
</div>
